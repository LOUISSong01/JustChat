                            ul#messageList
                        div#whoyouare
                        div#messagesFormContainer
                            form#messagesForm
                                input(type="text" placeholder="type your message")
                                button Enter
                    div#nicknameFormContainer
                        form#nicknameForm
                            input(type="text" placeholder="choose your nickname" required maxlength="15")
                            button save
